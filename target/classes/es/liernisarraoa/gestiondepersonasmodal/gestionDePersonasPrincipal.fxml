<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.liernisarraoa.gestiondepersonasmodal.Controlador.HelloController">
   <center>
      <!-- Definición del contenedor central -->
      <TableView fx:id="tablaPersonas" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <columns>
            <!-- Definición de las columnas de la tabla -->
            <TableColumn id="nombre" fx:id="columnaNombre" maxWidth="Infinity" minWidth="140.0" prefWidth="202.0" text="Nombre" />
            <!-- Definición de la columna "Nombre" -->
            <!-- El atributo minWidth se establece en 140 para definir el ancho mínimo de la columna -->
            <!-- El atributo maxWidth se establece en Infinity para permitir que la columna se expanda -->
            <TableColumn id="apellido" fx:id="columnaApellido" maxWidth="Infinity" minWidth="190.0" prefWidth="278.0" text="Apellido" />
            <!-- Definición de la columna "Apellido" -->
            <!-- El atributo minWidth se establece en 190 para definir el ancho mínimo de la columna -->
            <!-- El atributo maxWidth se establece en Infinity para permitir que la columna se expanda -->
            <TableColumn id="edad" fx:id="columnaEdad" maxWidth="Infinity" minWidth="75.0" prefWidth="109.0" text="Edad" />
            <!-- Definición de la columna "Edad" -->
            <!-- El atributo minWidth se establece en 75 para definir el ancho mínimo de la columna -->
            <!-- El atributo maxWidth se establece en Infinity para permitir que la columna se expanda -->
         </columns>
         <BorderPane.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <bottom>
      <Button fx:id="btnAgregarPersona" mnemonicParsing="false" onAction="#agregarPersona" text="Agregar Persona" BorderPane.alignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
